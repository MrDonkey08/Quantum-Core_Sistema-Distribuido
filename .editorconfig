root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4-space indentation
[*.{rs}]
indent_style = space
indent_size = 4

# 2-space indentation
[*.{env,json,md,toml,yml}]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile,*.{bash,sh}]
indent_style = tab

# Shell scripts
[*.{bash,sh}]
# shell_variant      = posix
binary_next_line   = true
switch_case_indent = true
space_redirects    = true
keep_padding       = true
function_next_line = false
